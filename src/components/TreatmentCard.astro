---
import { Image } from "astro:assets";

export interface Props {
  title: string;
  headline: string;
  imgSrc: string;
  imgAlt: string;
  excerpt: string;

}

const { imgSrc, imgAlt, excerpt, title } = Astro.props;
---

<div class="card bg-base-100 w-full shadow-sm flex h-full flex-col">
  <figure>
    <Image
      src={imgSrc}
      alt={imgAlt}
      width={600}
      height={400}
      class="h-40 w-full object-cover object-center"
    />
  </figure>
  <div class="card-body">
    <h2 class="card-title">{title}</h2>
    <p>
      {excerpt}
    </p>
    <div class="card-actions justify-end mt-3">
      <button class="btn btn-primary">View Treatments </button>
    </div>
  </div>
</div>
