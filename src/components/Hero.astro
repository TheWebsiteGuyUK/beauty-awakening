---
// filepath: /home/robot/projects/beauty-awakening/src/components/Hero.astro
import MobileButtons from "./MobileButtons.astro";
import TopBar from "./TopBar.astro";

export interface Props {
  title: string;
  backgroundImageUrl: string;
  headline: string;
  intro: string;
  isHomePage?: boolean; // Add a new prop to indicate if it's the home page
}

const { backgroundImageUrl, headline, intro, isHomePage } = Astro.props;
---

<div
  class="bg-neutral flex h-1/2 flex-col bg-cover bg-center bg-no-repeat"
  style={`background-image: url(${backgroundImageUrl});`}>
  <div
    class="from-base-300 via-neutral/40 to-base-300 flex h-full w-full flex-col justify-between bg-gradient-to-b pb-20">
    <TopBar />
    <header class="text-center">
      <h1
        class="animate-fade font-hand animate-once animate-ease-in text-glow-primary/20 text-base-100 mx-auto max-w-6xl px-1 py-10 text-5xl font-bold tracking-tight text-wrap drop-shadow-lg lg:text-7xl 2xl:text-9xl">
        {headline}
      </h1>

      <div class="container mx-auto p-3">
        {isHomePage && <MobileButtons />}
      </div>

      <p
        class="text-accent-content text-shadow-2xs mx-auto max-w-2xl text-xl font-semibold tracking-tight">
        {intro}
      </p>
    </header>
  </div>
</div>
