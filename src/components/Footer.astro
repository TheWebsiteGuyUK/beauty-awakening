---
import { getCollection } from "astro:content";
const treatments = await getCollection("treatments");

import company from "@content/settings/company.json";
---

<footer class="">
  <div class="footer sm:footer-horizontal bg-base-200 text-base-content p-10">
    <nav>
      <h6 class="footer-title">Services</h6>
      {
        treatments.map((treatment) => (
          <a class="link link-hover" href={`/treatments/${treatment?.id}`}>{treatment.data.title}</a>
        ))
      }
    </nav>
    <div>
      <h6 class="footer-title">Location</h6>
      {company.address.street && <p>{company.address.street}</p>}
      {company.address.city && <p>{company.address.city}</p>}
      {company.address.county && <p>{company.address.county}</p>}
      {company.address.postcode && <p>{company.address.postcode}</p>}
    </div>
    <div>
      <h6 class="footer-title">Contact</h6>
      {company.contact.phone && <p>{company.contact.phone}</p>}
      {company.contact.mobile && <p>{company.contact.mobile}</p>}
      {company.contact.email && <p>{company.contact.email}</p>}
    </div>
    <nav>
      <h6 class="footer-title">Company</h6>
      <a href="/about" class="link link-hover">About</a>
      <a
        href="https://www.fresha.com/a/beauty-awakening-by-chantelle-filleigh-castle-hill-gardens-barnstaple-hap6xt83?preview=24b31ae0-f6b1-4867-81c7-02e3854c8a5c&share&pId=1333999"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Book an appointment"
        class="link link-hover flex flex-row items-center gap-1">
        <span>Appointments</span>

        <span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-3 w-3">
            <>
              <path d="M15 3h6v6"></path>
              <path d="M10 14 21 3"></path>
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
              ></path>
            </>
          </svg>
        </span>
      </a>
    </nav>
    <nav>
      <h6 class="footer-title">Social</h6>
      <div class="grid grid-flow-col gap-4">
        <a
          href={company.social.instagram}
          target="_blank"
          rel="noopener noreferrer">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-instagram"
            ><rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect><path
              d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line
              x1="17.5"
              x2="17.51"
              y1="6.5"
              y2="6.5"></line></svg
          >
        </a>
        <a
          href={company.social.facebook}
          target="_blank"
          rel="noopener noreferrer">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-facebook"
            ><path
              d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
            ></path></svg
          >
        </a>
      </div>
    </nav>
  </div>
  <div class="text-center text-base-content p-10 bg-base-300">
    <p>
      Copyright &copy; <script is:inline>
        document.write(new Date().getFullYear());
      </script> - Beauty Awakening by Chantelle. All rights reserved.
    </p>
    <p>
      Website by
      <a
        href="https://www.thewebsiteguy.uk"
        target="_blank"
        rel="noopener noreferrer"
        class="link link-hover font-semibold">
        @TheWebsiteGuyUK
      </a>
    </p>
  </div>
</footer>
