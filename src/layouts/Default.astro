---
import TopBar from "@components/TopBar.astro";
import "@styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="beautyTheme" class="bg-base-200">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="scroll-auto">
    <section>
      <div class="from-primary/60 to-base-300 bg-linear-to-b">
        <TopBar />
      </div>
    </section>
    <main class="bg-linear-to-b from-base-300 to-base-200">
      <slot />
    </main>
  </body>
</html>

<script
  defer
  src="https://unpkg.com/tailwindcss-intersect@2.x.x/dist/observer.min.js"
></script>
