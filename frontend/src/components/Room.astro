---
import { Image } from 'astro:assets'

import directus from '@api/directus'
import { readItems } from '@directus/sdk'

const homePage = await directus.request(
  readItems('home_page', {
    fields: ['*'],
  })
)

const Room1 = `${import.meta.env.PUBLIC_API}/assets/${homePage.cta_img_1}`
const Room2 = `${import.meta.env.PUBLIC_API}/assets/${homePage.cta_img_2}`
---

<div
  class="relative mx-auto max-w-screen-2xl px-4 pb-20  animate-once intersect:animate-fade-up sm:px-0">
  <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
    <div
      class="bg-primary p-8  animate-once intersect:animate-fade-up md:p-12 lg:px-16 lg:py-24">
      <div class="mx-auto max-w-xl text-center">
        <h2 class="text-2xl font-bold text-white md:text-3xl">
          {homePage.cta_headline}
        </h2>

        <p set:html={homePage.cta_content} />

        <div class="mt-4 md:mt-8">
          <a
            href="https://www.fresha.com/a/beauty-awakening-by-chantelle-filleigh-castle-hill-gardens-barnstaple-hap6xt83/booking?menu=true&pId=1333999&dppub=true&employeeId=3200347"
            class="inline-block rounded border border-white bg-white px-12 py-3 text-sm font-medium text-primary transition hover:bg-transparent hover:text-white focus:outline-none focus:ring focus:ring-yellow-400">
            Book an Appointment
          </a>
        </div>
      </div>
    </div>

    <div
      class="grid grid-cols-2 gap-4 animate-once intersect:animate-fade-up md:grid-cols-1 lg:grid-cols-2">
      <Image alt="" src={Room1} height={800} width={400} class="h-40 w-full object-cover sm:h-56 md:h-full" />

      <Image alt="" src={Room2} height={800} width={400} class="h-40 w-full object-cover sm:h-56 md:h-full" />
    </div>
  </div>
</div>
