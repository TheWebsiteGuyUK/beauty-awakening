---
import { Image } from 'astro:assets'
import Hero from '@assets/images/woman-waiting.webp'
import ServiceCards from '@components/ServiceCards.astro'
import TopBar from '@components/TopBar.astro'
import Treatments from '@components/Treatments.astro'
import Buttons from '@components/Buttons.astro'

export interface Props {
  title: string
  backgroundImageUrl: string
  headline: string
}

const { backgroundImageUrl, headline } = Astro.props
---

  <div class="flex flex-col h-dvh inset-0 bg-cover bg-no-repeat bg-center bg-neutral" style={`background-image: url(${backgroundImageUrl});`}>
    <div class=" h-full w-full bg-gradient-to-b from-neutral via-neutral/40 to-primary  pb-20 flex flex-col justify-between">
      <TopBar />
      
      <h1
        class="mx-auto max-w-6xl animate-fade text-wrap text-center text-5xl px-1  font-bold tracking-tight text-white/90 drop-shadow-lg animate-delay  animate-once animate-ease-in text-glow-primary/20 py-5 lg:py-20 lg:text-9xl font-hand">
        {headline}
      </h1>
      <Buttons />
      <button class="mx-auto animate-bounce animate-delay-500 animate-duration-1000">
        <svg class="w-6 h-6 fill-neutral" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" ><path d="m12 15.586-4.293-4.293-1.414 1.414L12 18.414l5.707-5.707-1.414-1.414z"></path><path d="m17.707 7.707-1.414-1.414L12 10.586 7.707 6.293 6.293 7.707 12 13.414z"></path></svg>
      </button>
    </div>
    
  </div>
  

