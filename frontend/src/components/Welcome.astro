---
import { Image } from 'astro:assets'
import Hero from '@assets/images/woman-waiting.webp'
import ServiceCards from '@components/ServiceCards.astro'
import TopBar from '@components/TopBar.astro'
import Treatments from '@components/Treatments.astro'
import Buttons from '@components/Buttons.astro'

export interface Props {
  title: string
  backgroundImageUrl: string
  headline: string
}

const { backgroundImageUrl, headline } = Astro.props
---

<div
  class="inset-0 flex h-dvh flex-col bg-neutral bg-cover bg-center bg-no-repeat"
  style={`background-image: url(${backgroundImageUrl});`}>
  <div
    class="flex h-full w-full flex-col justify-between bg-gradient-to-b from-neutral via-neutral/40 to-primary pb-20">
    <TopBar />

    <h1
      class="animate-delay mx-auto max-w-6xl animate-fade text-wrap px-1 py-5 text-center font-hand text-5xl font-bold tracking-tight text-white/90 drop-shadow-lg animate-once animate-ease-in text-glow-primary/20 lg:py-20 lg:text-7xl 2xl:text-9xl">
      {headline}
    </h1>
    <Buttons />
    <button class="mx-auto animate-bounce animate-delay-500 animate-duration-1000">
      <svg class="h-6 w-6 fill-neutral" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
        ><path d="m12 15.586-4.293-4.293-1.414 1.414L12 18.414l5.707-5.707-1.414-1.414z"></path><path
          d="m17.707 7.707-1.414-1.414L12 10.586 7.707 6.293 6.293 7.707 12 13.414z"></path></svg
      >
    </button>
  </div>
</div>
