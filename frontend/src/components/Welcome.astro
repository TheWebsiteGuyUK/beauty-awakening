---
import { Image } from 'astro:assets'
import Hero from '@assets/images/woman-waiting.webp'
import ServiceCards from '@components/ServiceCards.astro'
import TopBar from '@components/TopBar.astro'
import Treatments from '@components/Treatments.astro'
import MobileButtons from '@components/MobileButtons.astro'
---

<div class="h-screen snap-center">
  <Image src={Hero} alt="Logo" class="h-screen w-full object-cover object-center" loading="eager" />
  <div class="absolute top-0 h-dvh w-full bg-gradient-to-b from-neutral via-white/20 to-neutral">
	<TopBar />
    <h1
      class="mx-auto max-w-6xl animate-fade text-wrap text-center text-4xl font-extrabold tracking-tight text-white/90 drop-shadow animate-delay-500 animate-duration-[3000ms] animate-once animate-ease-in text-glow-white/50 md:py-20 md:text-8xl">
      A warm, glowing welcome awaits you
    </h1>
    <MobileButtons />
    <div class="">
      <Treatments />
    </div>
  </div>
</div>
