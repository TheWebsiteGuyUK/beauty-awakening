---
import { Image } from 'astro:assets'
import Hero from '@assets/images/woman-waiting.webp'
import ServiceCards from '@components/ServiceCards.astro'
import TopBar from '@components/TopBar.astro'
import Treatments from '@components/Treatments.astro'
import MobileButtons from '@components/MobileButtons.astro'

export interface Props {
  title: string
  backgroundImageUrl: string
  headline: string
}

const { backgroundImageUrl, headline } = Astro.props
---

<div class="h-screen snap-center">
  <Image
    src={backgroundImageUrl}
    width={1600}
    height={800}
    alt="Logo"
    class="h-screen w-full object-cover object-center"
    loading="eager"
  />
  <div class="absolute top-0 h-dvh w-full bg-gradient-to-b from-neutral via-white/20 to-neutral">
    <TopBar />
    <h1
      class="mx-auto max-w-6xl animate-fade text-wrap text-center text-6xl font-extrabold tracking-tight text-white/90 animate-delay-500 animate-duration-[3000ms] animate-once animate-ease-in text-glow-primary/20 lg:py-20 lg:text-8xl drop-shadow-lg">
      {headline}
    </h1>
    <MobileButtons />
    <ul class="mx-auto grid max-w-screen-2xl grid-cols-2 gap-6 px-3 lg:grid-cols-3">
      <Treatments />
    </ul>
  </div>
</div>
