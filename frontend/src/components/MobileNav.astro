<script is:inline>
  let lastScrollTop = 0;
  const navbar = document.querySelector('.btm-nav');

  // Initially hide the navbar
  navbar.classList.add('bottom-[-100px]');

  window.addEventListener('scroll', () => {
    let currentScroll = window.pageYOffset || document.documentElement.scrollTop;

    if (currentScroll > lastScrollTop && currentScroll > 0) {
      // Scrolling down, hide the navbar
      navbar.classList.remove('bottom-0');
      navbar.classList.add('bottom-[-100px]');
    } else if (currentScroll < lastScrollTop && currentScroll > 0) { // Check for UP scroll AND not at the top
      // Scrolling up, show the navbar
      navbar.classList.remove('bottom-[-100px]');
      navbar.classList.add('bottom-0');
    } else if (currentScroll <= 0) {
      // At the very top, hide the navbar regardless of scroll direction
      navbar.classList.remove('bottom-0');
      navbar.classList.add('bottom-[-100px]');
    }

    lastScrollTop = currentScroll <= 0 ? 0 : currentScroll;
  });
</script>

