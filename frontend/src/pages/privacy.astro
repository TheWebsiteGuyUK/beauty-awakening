---
import { Image } from 'astro:assets'
import TopBar from '@components/TopBar.astro'
import Treatments from '@components/Treatments.astro'
import MobileButtons from '@components/MobileButtons.astro'
import Layout from '@layouts/BaseLayout.astro'

import directus from '@api/directus'
import { readItems } from '@directus/sdk'

const privacyPage = await directus.request(
  readItems('privacy_page', {
    fields: ['*'],
  })
)


const backgroundImageUrl = `${import.meta.env.PUBLIC_API}/assets/${privacyPage.background_image}`
---

<Layout title={privacyPage.title} backgroundImageUrl={backgroundImageUrl}>
    <div class="h-full pb-20 bg-neutral/40 backdrop-blur-sm">
      <TopBar />
       <div class="p-3">
        <div class="container max-w-screen-xl mx-auto p-3">
            <h1
            class="mx-auto max-w-6xl  text-wrap text-center text-4xl font-bold tracking-tight text-white/90 drop-shadow  animate-once animate-ease-in font-hand md:text-6xl py-6">
            { privacyPage.title }
          </h1>
          
          <div class="bg-white p-3 rounded">
            <article class="prose prose-sm lg:prose-xl max-w-none p-6">
              <p set:html={privacyPage.content}/>
          </article>
          </div>
           </div>
       </div>
      
    </div>
  </Layout>