---
import { Image } from 'astro:assets'
import TopBar from '@components/TopBar.astro'
import Treatments from '@components/Treatments.astro'
import MobileButtons from '@components/MobileButtons.astro'
import Layout from '@layouts/BaseLayout.astro'

import directus from '@api/directus'
import { readItems } from '@directus/sdk'

const aboutPage = await directus.request(
  readItems('about_page', {
    fields: ['*'],
  })
)

const backgroundImageUrl = `${import.meta.env.PUBLIC_API}/assets/${aboutPage.featured_image}`
---

<Layout title={aboutPage.title} backgroundImageUrl={backgroundImageUrl}>
    <div class="h-full pb-20 bg-neutral/30 ">
      <div class="bg-gradient-to-b from-neutral via-neutral/50 to-neautral/30">
        <TopBar />
      </div>
       <div class="p-3">
        <div class="container max-w-screen-xl mx-auto p-3 rounded-lg bg-white/40 backdrop-blur-md">
            <h1
            class="mx-auto max-w-6xl text-wrap text-center text-4xl font-hand tracking-tight text-primary drop-shadow  md:text-6xl py-6">
            { aboutPage.title }
          </h1>
          
          <article class="prose prose-xl max-w-none px-6">
              <p set:html={aboutPage.content}/>
          </article>
           </div>
       </div>
      
    </div>
  </Layout>